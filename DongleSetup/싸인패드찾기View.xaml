<Window
    x:Class="DongleSetup.싸인패드찾기View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DongleSetup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="싸인패드찾기"
    Width="310"
    Height="370"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <StackPanel Margin="10">
        <TextBlock
            Margin="0,0,0,10"
            FontWeight="Bold"
            Text="싸인패드로 연결된 포트를 선택해 주시기 바랍니다." />
        <TextBlock Foreground="Red" Text=" *. 여러번 시도 중이라면 이전에 선택하지" />
        <TextBlock Foreground="Red" Text="    않았던 포트를 선택하시기 바랍니다." />
        <ListBox
            Name="lstPorts"
            Height="200"
            Margin="0,10,0,0" />
        <Button
            Width="100"
            Height="30"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Click="Button_Click"
            Content="확인" />
    </StackPanel>
</Window>
